---
import Layout from '../layouts/Layout.astro';
import DayCard from '../components/DayCard.astro';
import itinerary from '../data/itinerary.json';
---

<Layout 
  title={itinerary.title}
  description={itinerary.description}
>
  <!-- Hero Section -->
  <section class="relative min-h-screen bg-gradient-to-br from-blue-600 via-indigo-700 to-purple-800 text-white flex items-center overflow-hidden">
    <!-- Dynamic Background -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1920&h=1080&fit=crop&q=80')] bg-cover bg-center opacity-30"></div>
      <div class="absolute inset-0 bg-gradient-to-br from-blue-900/80 via-indigo-900/70 to-purple-900/80"></div>
      <!-- Floating elements -->
      <div class="absolute top-20 left-10 w-2 h-2 bg-white/20 rounded-full animate-float"></div>
      <div class="absolute top-40 right-20 w-1 h-1 bg-white/30 rounded-full animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-40 left-1/4 w-1.5 h-1.5 bg-white/25 rounded-full animate-float" style="animation-delay: 4s;"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-6 py-20">
      <div class="max-w-4xl mx-auto text-center">
        <div class="mb-8 animate-fade-in">
          <span class="inline-block bg-white/20 backdrop-blur-sm px-6 py-3 rounded-full text-lg font-medium mb-6 border border-white/10 hover:bg-white/30 transition-all duration-300">
            <span class="mr-2">ğŸ‡®ğŸ‡¸</span>Epic Adventure Awaits
          </span>
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-6 leading-tight bg-gradient-to-r from-white to-blue-100 bg-clip-text text-transparent font-display">
            {itinerary.title}
          </h1>
          <p class="text-xl md:text-2xl lg:text-3xl mb-8 opacity-90 font-light max-w-4xl mx-auto">
            {itinerary.subtitle}
          </p>
          <p class="text-lg md:text-xl max-w-3xl mx-auto mb-12 opacity-80 leading-relaxed">
            {itinerary.description}
          </p>
        </div>
        
        <!-- Quick Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mb-12">
          <div class="group bg-white/10 backdrop-blur-md rounded-2xl p-4 md:p-6 border border-white/20 hover:bg-white/20 hover:scale-105 transition-all duration-300">
            <div class="text-3xl md:text-4xl font-bold mb-2 text-blue-200 group-hover:text-white transition-colors">8</div>
            <div class="text-sm md:text-lg opacity-90">Days</div>
          </div>
          <div class="group bg-white/10 backdrop-blur-md rounded-2xl p-4 md:p-6 border border-white/20 hover:bg-white/20 hover:scale-105 transition-all duration-300">
            <div class="text-3xl md:text-4xl font-bold mb-2 text-emerald-200 group-hover:text-white transition-colors">~1,400</div>
            <div class="text-sm md:text-lg opacity-90">Kilometers</div>
          </div>
          <div class="group bg-white/10 backdrop-blur-md rounded-2xl p-4 md:p-6 border border-white/20 hover:bg-white/20 hover:scale-105 transition-all duration-300">
            <div class="text-3xl md:text-4xl font-bold mb-2 text-yellow-200 group-hover:text-white transition-colors">35+</div>
            <div class="text-sm md:text-lg opacity-90">Attractions</div>
          </div>
          <div class="group bg-white/10 backdrop-blur-md rounded-2xl p-4 md:p-6 border border-white/20 hover:bg-white/20 hover:scale-105 transition-all duration-300">
            <div class="text-3xl md:text-4xl font-bold mb-2 text-purple-200 group-hover:text-white transition-colors">1</div>
            <div class="text-sm md:text-lg opacity-90">Highland</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
          <a href="#itinerary" class="group bg-white text-slate-900 px-8 py-4 rounded-2xl font-bold text-lg hover:bg-slate-100 transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105 flex items-center space-x-2">
            <span>Explore the Journey</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
