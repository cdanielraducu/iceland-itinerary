---
export interface Props {
  location: {
    name: string;
    type: string;
    time?: string;
    description: string;
    image?: string;
    tips?: string[];
    pros?: string[];
    cons?: string[];
    alternatives?: Array<{
      name: string;
      type: string;
      description: string;
      pros: string[];
      cons: string[];
      drive_time: string;
      image: string;
    }>;
    local_insights?: string[];
  };
}

